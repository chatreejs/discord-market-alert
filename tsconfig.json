{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@configs": ["./configs"],
      "@constants": ["./constants"],
      "@enums": ["./enums"],
      "@interfaces": ["./interfaces"],
      "@services": ["./services"],
      "@utils": ["./utils"]
    }
  },
  "lib": ["es2020"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
